{
	"name": "nadle",
	"version": "0.5.1",
	"description": "A type-safe, Gradle-inspired task runner for Node.js. Sharp tasks. Fast builds.",
	"license": "MIT",
	"type": "module",
	"scripts": {
		"build": "nadle build",
		"start": "tsc -p tsconfig.build.json --watch --noEmit false",
		"test": "nadle test",
		"update": "vitest -u",
		"bench": "vitest bench"
	},
	"files": [
		"lib",
		"nadle.mjs"
	],
	"exports": {
		".": {
			"types": "./lib/index.d.ts",
			"import": "./lib/index.js"
		}
	},
	"bin": "nadle.mjs",
	"types": "lib/index.d.ts",
	"dependencies": {
		"@nadle/kernel": "workspace:*",
		"@nadle/project-resolver": "workspace:*",
		"consola": "^3.4.2",
		"execa": "^9.6.1",
		"fast-glob": "^3.3.3",
		"fastest-levenshtein": "^1.0.16",
		"fuzzysort": "^3.1.0",
		"glob": "^11.1.0",
		"ink": "^6.8.0",
		"jiti": "^2.6.1",
		"lodash-es": "^4.17.21",
		"micromatch": "^4.0.8",
		"object-hash": "^3.0.0",
		"react": "^19.1.0",
		"rimraf": "^6.1.3",
		"std-env": "^3.10.0",
		"tinypool": "^2.1.0",
		"tinyrainbow": "^3.0.3",
		"yargs": "^18.0.0"
	},
	"devDependencies": {
		"@size-limit/file": "^12.0.0",
		"@types/lodash-es": "^4.17.12",
		"@types/micromatch": "^4.0.10",
		"@types/node": "^20.19.25",
		"@types/object-hash": "^3.0.6",
		"@types/react": "^19.1.8",
		"@types/serialize-javascript": "^5.0.4",
		"@types/yargs": "^17.0.35",
		"@vitest/coverage-v8": "^4.0.18",
		"@vitest/expect": "^4.0.18",
		"fixturify": "^3.0.0",
		"knip": "^5.85.0",
		"serialize-javascript": "^7.0.2",
		"size-limit": "^11.2.0",
		"strip-ansi": "^7.1.2",
		"ts-morph": "^27.0.2",
		"tsup": "^8.5.1",
		"typedoc": "^0.28.15",
		"typedoc-plugin-markdown": "^4.10.0",
		"typescript": "^5.9.3",
		"vitest": "4.0.18",
		"yaml": "^2.8.2"
	},
	"engines": {
		"node": ">=22"
	},
	"author": {
		"name": "Nam Hoang Le",
		"email": "namhoangle.dev@gmail.com",
		"url": "https://github.com/nam-hle"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/nadlejs/nadle.git",
		"directory": "packages/nadle"
	},
	"keywords": [
		"task",
		"runner",
		"build",
		"parallel",
		"pipeline",
		"cli",
		"tool",
		"gradle",
		"grunt",
		"make",
		"typescript",
		"automation",
		"type-safe",
		"lightweight"
	],
	"homepage": "https://nadle.dev",
	"bugs": "https://github.com/nadlejs/nadle/issues",
	"publishConfig": {
		"access": "public"
	},
	"size-limit": [
		{
			"path": "lib/**",
			"limit": "140 KB",
			"name": "bundled",
			"brotli": false
		}
	]
}
