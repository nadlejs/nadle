{
	"$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
	"bump-minor-pre-major": true,
	"bump-patch-for-minor-pre-major": true,

	"separate-pull-requests": true,
	"pull-request-title-pattern": "chore: release ${component} v${version}",

	"include-component-in-tag": true,
	"tag-separator": "/",

	"changelog-sections": [
		{ "type": "feat", "section": "Features" },
		{ "type": "fix", "section": "Bug Fixes" },
		{ "type": "docs", "section": "Documentation" },
		{ "type": "perf", "section": "Performance" },
		{ "type": "refactor", "section": "Internal" },
		{ "type": "test", "section": "Internal" },
		{ "type": "chore", "section": "Miscellaneous" },
		{ "type": "build", "section": "Miscellaneous" },
		{ "type": "ci", "section": "Miscellaneous" }
	],

	"packages": {
		"packages/nadle": {
			"extra-files": [
				{
					"type": "generic",
					"path": "src/core/nadle.ts"
				}
			],
			"release-type": "node",
			"release-as": "0.5.1"
		},
		"packages/create-nadle": {
			"release-type": "node"
		}
	},
	"plugins": [{ "type": "sentence-case" }]
}
